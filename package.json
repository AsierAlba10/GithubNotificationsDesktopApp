{
  "name": "github-notifications",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para monitorear notificaciones de GitHub",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack --watch\" \"NODE_ENV=development electron .\"",
    "build:webpack": "webpack --mode production",
    "build": "npm run build:webpack && electron-builder",
    "build:mac": "npm run build:webpack && electron-builder --mac",
    "build:win": "npm run build:webpack && electron-builder --win",
    "build:linux": "npm run build:webpack && electron-builder --linux"
  },
  "keywords": [
    "github",
    "notifications",
    "desktop",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.githubnotifications.app",
    "productName": "GitHub Notifications",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^8.4.1",
    "buffer": "^6.0.3",
    "concurrently": "^7.4.0",
    "css-loader": "^6.7.1",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
